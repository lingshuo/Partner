<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" >

            <View
                android:id="@+id/baseline1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerInParent="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/baseline1"
                android:layout_centerHorizontal="true"
                android:text="合伙人" />

            <TextView
                android:id="@+id/partner_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/baseline1"
                android:layout_centerHorizontal="true"
                android:text="182" />

            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#ffcccccc" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/baseline2"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一级合伙人:" />

                <TextView
                    android:id="@+id/first_partner_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10人" />
            </LinearLayout>

            <View
                android:id="@+id/baseline2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/baseline2"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二级合伙人:" />

                <TextView
                    android:id="@+id/second_partner_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30人" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffcccccc" />

    <!-- 次级合伙人概况 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="次级合伙人概况"
                android:textColor="#ffff0000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/textview"
                android:background="#ffff0000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="60dp"
                android:layout_height="match_parent" >

                <View
                    android:id="@+id/baseline3"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/baseline3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:text="人数"
                    android:textColor="#ffff0000" />

                <TextView
                    android:id="@+id/second_people_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/baseline3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:text="182"
                    android:textColor="#ffff0000" />
            </RelativeLayout>

            <View
                android:id="@+id/vertical_baseline"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_above="@id/vertical_baseline"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/rel1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent" >

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="#ffcccccc" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#ffcccccc" />

                    <View
                        android:id="@+id/baseline4"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/baseline4"
                        android:layout_centerHorizontal="true"
                        android:text="股票配资" />

                    <TextView
                        android:id="@+id/second_stock_peizi_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/baseline4"
                        android:layout_centerHorizontal="true"
                        android:text="182" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent" >

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#ffcccccc" />

                    <View
                        android:id="@+id/baseline5"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/baseline5"
                        android:layout_centerHorizontal="true"
                        android:text="期货配资" />

                    <TextView
                        android:id="@+id/second_future_peizi_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/baseline5"
                        android:layout_centerHorizontal="true"
                        android:text="182" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@id/linearlayout"
                android:layout_alignRight="@id/linearlayout"
                android:layout_centerVertical="true"
                android:background="#ffcccccc" />

            <LinearLayout
                android:id="@+id/linearlayout1"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_below="@id/vertical_baseline"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/rel1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent" >

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="#ffcccccc" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#ffcccccc" />

                    <View
                        android:id="@+id/baseline6"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/baseline6"
                        android:layout_centerHorizontal="true"
                        android:text="股票返佣" />

                    <TextView
                        android:id="@+id/second_stock_fanyong_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/baseline6"
                        android:layout_centerHorizontal="true"
                        android:text="182" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent" >

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#ffcccccc" />

                    <View
                        android:id="@+id/baseline7"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/baseline7"
                        android:layout_centerHorizontal="true"
                        android:text="期货返佣" />

                    <TextView
                        android:id="@+id/second_future_fanyong_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/baseline7"
                        android:layout_centerHorizontal="true"
                        android:text="182" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/linearlayout1" >

                <View
                    android:id="@+id/baseline8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/baseline8"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:text="对你贡献"
                    android:textColor="#ffff0000" />

                <TextView
                    android:id="@+id/second_contribute_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/baseline8"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:text="182"
                    android:textColor="#ffff0000" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- 一级合伙人详情 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一级合伙人概况"
                android:textColor="#ff00ff00" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
