                    android:text="人数"
                    android:textColor="#ff00ff00" />

                <TextView
                    android:id="@+id/first_people_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/first_baseline3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:text="182"
                    android:textColor="#ff00ff00" />
            </RelativeLayout>

            <View
                android:id="@+id/first_vertical_baseline"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:id="@+id/first_linearlayout"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_above="@id/first_vertical_baseline"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/first_rel1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent" >

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="#ffcccccc" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#ffcccccc" />

                    <View
                        android:id="@+id/first_baseline4"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/first_baseline4"
                        android:layout_centerHorizontal="true"
                        android:text="股票配资" />

                    <TextView
                        android:id="@+id/first_stock_peizi_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/first_baseline4"
                        android:layout_centerHorizontal="true"
                        android:text="182" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent" >

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#ffcccccc" />

                    <View
                        android:id="@+id/first_baseline5"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/first_baseline5"
                        android:layout_centerHorizontal="true"
                        android:text="期货配资" />

                    <TextView
                        android:id="@+id/first_future_peizi_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/first_baseline5"
                        android:layout_centerHorizontal="true"
                        android:text="182" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@id/first_linearlayout"
                android:layout_alignRight="@id/first_linearlayout"
                android:layout_centerVertical="true"
                android:background="#ffcccccc" />

            <LinearLayout
                android:id="@+id/first_linearlayout1"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_below="@id/first_vertical_baseline"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/first_rel1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent" >

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="#ffcccccc" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#ffcccccc" />

                    <View
                        android:id="@+id/first_baseline6"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/first_baseline6"
                        android:layout_centerHorizontal="true"
                        android:text="股票返佣" />

                    <TextView
                        android:id="@+id/first_stock_fanyong_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/first_baseline6"
                        android:layout_centerHorizontal="true"
                        android:text="182" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent" >

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#ffcccccc" />

                    <View
                        android:id="@+id/first_baseline7"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/first_baseline7"
                        android:layout_centerHorizontal="true"
                        android:text="期货返佣" />

                    <TextView
                        android:id="@+id/first_future_fanyong_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/first_baseline7"
                        android:layout_centerHorizontal="true"
                        android:text="182" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/first_linearlayout1" >

                <View
                    android:id="@+id/first_baseline8"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/first_baseline8"
                    android:layout_centerHorizontal="true"
